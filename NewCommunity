    <script>
        function AddDiscussion(){
          var Discussion = document.getElementById('ListStart');
          var DiscussionContent = document.getElementById('DiscussionInput').value;
          console.log(DiscussionContent);
      
          var template = document.getElementById('template');
          var finalHtml = template.innerHTML
                .replace("{Discussion Question}", DiscussionContent);
      
            //var noDiscussionText = document.getElementById('noDiscussions');
           //noDiscussionText.remove();
          //document.body.insertAdjacentHTML('beforeend', finalHtml);//
          Discussion.insertAdjacentHTML('beforeend', finalHtml);
      }
      </script>

